{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "verbose": true,
  "testPathIgnorePatterns": ["dist"],
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.(ts)$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
